<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="mb-4 text-center">Connexion</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "card p-4 shadow" }) do |f| %>
        <% if flash[:alert] %>
          <div class="alert alert-danger"><%= flash[:alert] %></div>
        <% end %>

        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          <p style="font-size:12px; color:grey">Exemple : nouveladmin3@wacdo.co</p>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          <p style="font-size:12px; color:grey">Exemple : nouveladmin3</p>

        </div>


        <div class="d-grid">
          <%= f.submit "Se connecter", class: "btn btn-primary" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
