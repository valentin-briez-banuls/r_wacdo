<%= form_with(model: @restaurant, local: true) do |form| %>
  <% if @restaurant.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@restaurant.errors.count, "erreur") %> empêchent la sauvegarde :</h4>
      <ul>
        <% @restaurant.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :address, class: "form-label" %>
    <%= form.text_field :address, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :postal_code, class: "form-label" %>
    <%= form.text_field :postal_code, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :city, class: "form-label" %>
    <%= form.text_field :city, class: "form-control" %>
  </div>

  <div>
    <%= form.submit @restaurant.new_record? ? "Créer" : "Mettre à jour", class: "btn btn-primary" %>
  </div>
<% end %>
